#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t,n;

	cin>>t;
	while(t--){
	    int max=0;
	    cin>>n;
	    int arr[n];
	    for(int i=0; i<n;i++){
	        cin>>arr[i];
	    }
	    if(arr[0]==1 && arr[n-1]==n){
	        max = 0;
	    }
	    else{
	    int i=0;
	    while(arr[0]!=1 && arr[n-1]!=n){
	        swap(arr[i],arr[i+1]);
	        max++;
	        i++;
	        if(i==n-1){
	            i=0;
	        }
	    }
	    }
	    cout<<max<<endl;
	    
	}
	return 0;
}
