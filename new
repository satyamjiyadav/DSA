#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t,n;

	cin>>t;
	while(t--){
	    int max=0;
	    cin>>n;
	    int arr[n];
	    for(int i=0; i<n;i++){
	        cin>>arr[i];
	    }
	    if(arr[0]==1 && arr[n-1]==n){
	        max = 0;
	    }
	    else{
	    int i=0;
	    while(arr[0]!=1 && arr[n-1]!=n){
	        swap(arr[i],arr[i+1]);
	        max++;
	        i++;
	        if(i==n-1){
	            i=0;
	        }
	    }
	    }
	    cout<<max<<endl;
	    
	}
	return 0;
}


#include <iostream>
using namespace std;

int main()
{
    int t, n;
    cin>>t;
    while(t--)
    {
        cin >> n;
        int arr[n], arr2[n];
        for(int i=0; i<n; i++)    // <-- Array input
        cin >> arr[i];
        int flag = 1, in=0, Max = 0;
        for(int j=0; j<n; j++)
        {
            for(int i=0; i<n; i++)
            {
                if(arr[j] == arr2[i])
                {
                    in--; arr2[i] = 0;
                    flag =0;
                    break; 
                }
            }
            if (flag == 1)
            {
                in++;
                if(in>Max)
                Max = in;
                arr2[j] = arr[j];
            }
        }
        cout << Max << endl;
        
    }
    
    
	return 0;
}
